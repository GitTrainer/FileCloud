<h1>Share folder to members</h1>
<div class="row">
 <% if(@new_foldersharing.nil?)
       @new_foldersharing= Foldersharing.new
     end %>
<%= form_for(@new_foldersharing ) do |f| %>
                 <div class="span6">
                 <%= render 'shared/error_messages', object: f.object %>
				<table>
             <% @users.each do |user|%>
                      <div class="span4">
                        <%
                        select=false
                        Foldersharing.where(:shared_user_id => user.id).each  do |pm|
                            select=true

                        end
                      %>
                        <%= check_box_tag 'list_user_id[]', user.id,select %> <%= user.name%>

                      </div>
                    <%end%>
                  </div>
				</table>
				<%= f.hidden_field :folder_id, :value => params[:folder_id] %>
                <div class="span1"></br><%= f.submit 'Share folder'%></div>
                </div>

                <%end%>

                </div>
                <a href="/folders/<%= params[:folder_id]%>">Back to Folder</a>
