<div class="row">
  <div class="span6 offset3">
   <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages',object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
  <% if !@user.id.nil?%>
    <p>
      <%= f.label :avatar%>
      <%= f.file_field :avatar %>
   </p>  
<%end%>





        
      <%= f.submit (@user.id.nil?)?  'Create my account' : 'Update', class: "btn btn-large btn-primary" %>
    <% end %> 
  </div>
</div>


