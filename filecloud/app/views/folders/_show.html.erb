<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<br/>

<%= form_tag('/filestreams/multiple_delete') do %>
	<table class="table table-hover">
		<tr>
			<th><%= sortable "attach_file_name", "File Name"%></th>
			<th><%= sortable "attach_file_size", "File Size"%></th>
			<th><%= sortable "created_at", "Created Date"%></th>
			<th><%= sortable "download_count", "Download Count"%></th>
			<%= hidden_field_tag :fID, @folder.id %>
			<th><input type="checkbox" onClick="checkAll()" id="chk0"></th>
			<% if Folder.where(:user_id => current_user, :id => params[:id]).exists? %>
				<th><%= submit_tag "Delete", :disabled => true, :class => "btn  btn-primary", :id=> "btn_multiple_delete", :confirm => "Are you sure?" %></th>
			<%end%>
			<th><%= submit_tag "Download", :id=> "btn_multiple_download", :disabled => true, :class => "btn  btn-primary" %></th>
		</tr>
	<% @uploads.each do |filestream|%>
		<tr>
			<td>
				<% if !filestream.password_protect.blank? %>
					<%= filestream.attach_file_name %>
					<i class="icon-lock"></i>
				<%else%>
					<%= filestream.attach_file_name %>
				<%end%>
			</td>
			<td><span><%= number_to_human_size(filestream.attach_file_size) %></span></td>
			<td><%= filestream.created_at.strftime("%m/%d/%Y") %></td>
		<td style="text-align: center;"> <%= filestream.download_count%></td>
			<td><%= check_box_tag 'check[]', filestream.id, false, class: "chk", :onclick => "checked_box()" %></td>
			<td></td><td></td>
			<td>
			  <li id="fat-menu" class="dropdown" style="list-style: none;">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag("down_arrow.png",:size => "30x40") %>
          </a>
            <ul class="dropdown-menu" style="margin-left: -100px;" id="option-<%=filestream.id%>">
             	<li><%=link_to "Download", download_public_file_filestream_path(filestream.id)%></li>
              <li class="divider"></li>
               <% extension = filestream.attach_file_name.split('.').last %>

	              <li><a href="/filestreams/<%=filestream.id%>">View</a></li>
                <li class="divider"></li>

              <% if Folder.where(:user_id => current_user, :id => params[:id]).exists?%>
              	<% if extension == "txt" %>
		            	<li><a href="/filestreams/<%=filestream.id%>/edit">Edit</a></li>
  	           		<li class="divider"></li>
	            	<% end %>
                <li><a href="#inline_password-<%=filestream.id%>" class="inline" >Password Protect...</a></li>
                <li class="divider"></li>
								<% if filestream.status == true %>
									<li>
										<a href="/filestreams/<%=filestream.id%>/accept?status=<%=filestream.status%>">Public (Make private)</a>
									</li>
									<li class="divider"></li>
		    				<%else%>
		   					  <li>
		   					    <a href="/filestreams/<%=filestream.id%>/accept?status=<%=filestream.status%>">Private (Make public)</a>
		   					  </li>
		   					  <li class="divider"></li>
		   					<%end%>
		   					<li>
		   						<a href="#inline_content-<%=filestream.id%>" class="inline">Share to users...</a>
		   					</li>
		   					<li class="divider"></li>
		   					<li>
		   						<a href="#moveFile-<%=filestream.id%>" class="inline">Move...</a>
		   					</li>
		   					<li class="divider"></li>
		   					<li>
		   						<a href="#changename-<%=filestream.id%>" class="inline">Rename</a>
		   					</li>
		   					<li class="divider"></li>
		   					<li>
		   					  <a href="/filestreams/<%=filestream.id%>/delete_from_folder" data-confirm="Are you sure?">Delete
		   					  </a>
		   					</li>
              </ul>
            </li>
			  </td>
		  <%end%>
		<%end%>
	</tr>
</table>
<%end%>

 	 <% if Folder.where(:user_id => current_user, :id => params[:id]).exists? %>
		<% @uploads.each do |filestream|%>
			<div style='display:none'>
				<div style="padding:10px; background:#fff;" id="changename-<%=filestream.id %>">
					<%= render 'rename', file_id: filestream.id, folder_id: params[:id]%>
				</div>
				<div style="padding:10px; background:#fff;" id="share_many-<%=filestream.id %>">
					<%= render 'share_many', file_id: filestream.id%>
				</div>
				<div style="padding:10px; background:#fff;" id="inline_content-<%=filestream.id %>">
					<%= render 'file_share', file_id: filestream.id %>
				</div>
				<div style="padding:10px; background:#fff;" id="inline_password-<%=filestream.id %>">
					<%= render 'password_protect', file_id: filestream.id %>
				</div>
				<div style="padding:10px; background:#fff;" id="moveFile-<%=filestream.id %>">
					<%= render 'move_file', file_id: filestream.id, folder_id: params[:id] %>
				</div>
			</div>
  	  <%end%>
  	<%end%>
