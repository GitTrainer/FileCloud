<h1 style="color:blue"> List Category</h1>
<%if @categorys.blank?%>
    <p style="color:red">There are not any category in the app.</p>
<%else%>
     <p style="color:green">These are current categoryr in app</p>
     <ul>
     <% @categorys.each do |f|%>
        <li>
 	        <%= link_to f.name,{:action=>'show',:id=>f.id} %>
 	        <b><%= link_to 'Edit',{:action=>'edit',:id=>f.id}%></b>
 	         <b><%= link_to 'Delete',{:action=>'destroy',:controller=>'categories',:id=>f.id},{:method=>'delete'},:confirm=>"Are you sure you want to delete this item?"%>
 	        </b>	
 	        
        </li>
        <%end%>
    </ul>
<%end%>
<p><%=link_to "Add new Category",{:action=>'new'}%></p>
