<h1 style="color:blue"> List Folder</h1>
<%if @folders.blank?%>
    <p>There are not any folder in the app.</p>
<%else%>
     <p>These are current folder in app</p>
     <ul>
     <%@folders.each do |f|%>
        <li>
 	        <%= link_to f.name,{:action=>'show',:id=>f.id} %>
 	        <b><%= link_to 'Edit',{:action=>'edit',:id=>f.id}%></b>
 	        <b><%= link_to 'Delete',{:action=>'destroy',:controller=>'folders',:id=>f.id},{:method=>'delete'},:confirm=>"Are you user you want to delete this item?"%>
 	        </b>	
        </li>
        <%end%>
    </ul>
<%end%>
<p><%=link_to "Add new folder",{:action=>'new'}%></p>
 