<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="tblUsers">
  <tr>
    <th><%= sortable "name" %></th>
    <th><%= sortable "email" %></th>
    <th>Login</th>
    <% if current_user.admin?%>
        <th colspan=3>Action</th>
    <%else%>
        <th colspan=2>Action</th>
    <%end%>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.login %></td>
    <td><%= link_to image_tag("info.png", alt: "Show"), user %></td>
    <% if current_user?(user) %>
        <td><%= link_to image_tag("edit.png", alt: "Edit"), edit_user_path(user) %></td>
    <%else%>
        <td>&nbsp</td>
    <% end %>
    <% if current_user.admin? %>
        <% if current_user!=user%>
          <td>
            <%= link_to image_tag("del.png", alt: "delete"), user, method: :delete,
                                    data: { confirm: "You sure?" } %>
          </td>
        <%else%>
          <td>&nbsp</td>
        <%end%>  
    <%end%>
  </tr>
<% end %>
</table>
