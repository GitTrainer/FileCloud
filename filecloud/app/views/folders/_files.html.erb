<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<div class="listUser">
	<table class="tb-lst", border="1">
	  <tr align="center">
	    <th>File_Id</th>
	    <th><%= sortable "attach_file_name" %></th>
	    <th>File Type</th>
	    <th><%= sortable "attach_file_size" %></th>
	    <th><%= sortable "created_at" %></th>
      	<th><%= sortable "count_download" %></th>
	    <th colspan=2>Action</th>
	  </tr>
	<% @files.each do |f| %>
	  <tr align="center">
	    <td><%= f.id %></td>
	    <td><%= link_to f.attach_file_name,file_up_load_path(f.id) %></td>
	    <td><%= f.attach_content_type %></td>
	    <td><%= f.attach_file_size %></td>
	    <td><%= f.created_at.strftime("%m/%d/%Y") %></td>
	    <td><%= f.count_download %></td>
	    <td><%= link_to image_tag("download.png", alt: "download"),file_up_load_path(f.id)%></td>
	    <td> <%= link_to image_tag("del.png", alt: "delete"), f, method: :delete,
                                    data: { confirm: "You sure?" } %></td>	  
	    <%end%>
	  </tr>
	</table>
</div>
 <div class="btn">
    <%=link_to 'Back',folders_path %>
  </div>
  <div class="btn"> 
    <%=link_to 'Add File',{:action=>'new',:controller=>'file_up_loads',:id=>@folder.id}%>
 </div>
 <%= will_paginate @files%>