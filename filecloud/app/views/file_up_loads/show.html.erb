<% provide(:title, @fileupload.attach_file_name)%>

<a href="#myModal" role="button" class="btn btn-primary" data-toggle="modal" margin-bottom: "20px">+Share</a>
  <!-- Modal -->
  <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="myModalLabel">Share file <%=@fileupload.attach_file_name%></h3>
        </div>
        <div class="modal-body">
        	<div>
        		<h4 style="color:blue">Who has access</h4>
                  <%= form_tag :controller=>'file_shares',:acttion=>'create',:id_file_up_load=>@fileupload.id,:method => 'post' do %>
        		<ul>
                 <table width:"100%" >
        		   <%@fileupload.file_shares.each do |file_share|%>
                   <tr >

                    <td> <%= image_tag file_share.user.avatar.url,:size => "40x40" %></td>
                    <td> <%=file_share.user.name+"   "%></td>
                    <td><%=file_share.user.email%></td>
                    <td style="color:red"> delete<%= check_box_tag 'activated[]',file_share.user.id,false%></td>
                    </tr>
                   
               
        		   <%end%>
                  
                  </table> 
        	    </ul>
        	</div>	
        	<div>
                <h4 style="color:blue">Add people:</h4>
                <p>
                  
                    <%=label_tag 'email','Enter email address:'%>
                    <%= text_field_tag 'email',params[:email]%>
                </p>
            </div>    
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button id="sharefile" class="btn btn-primary">Share & Save</button>
        </div>
        <%end%>
   </div>
<div id="container_file_show">
	<% if @fileupload.attach_content_type.include? "image"%>
			<p>
				<span><%=@fileupload.attach_file_name%>				</span>
				<span><%= link_to image_tag("btndownload.jpeg", alt: "Download"), download_file_up_load_path(@fileupload.id) %></span>
			</p>
			<div id="img_file">
				<%= image_tag @fileupload.attach.url %>
			</div>
	<%else%>
		<div id="otherfile">
				
			<%= link_to download_file_up_load_path(@fileupload.id) do %>
				<p>
					<span>Download (<%=@fileupload.attach_file_size%> byte)</span>
					<span>File name: <%=@fileupload.attach_file_name%>	</span>
				</p>
			<%end%>
				
		</div>
	<%end%>
</div>

