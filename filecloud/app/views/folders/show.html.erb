<div class="clear"></div>
<h1 style="color:blue"><%= @folder.name%></h1>
<div id="folderDetail">
	<% provide(:title, @folder.name)%>
	<div>
		<h5 style="color:blue">Category:<%= @folder.category.name%></h5></br>
	</div>
	<div>
		<h5 style="color:blue">Created Date:</h5><%=@folder.created_at%></br>
	</div>
	<div>
		<h5 style="color:blue">Description:</h5>
		<%=@folder.description%>
	</div>
</div>
<div id="listFolder">
	<% if !@subFolders.empty? %>
		<h5 style="color:blue"> Subfolder of <%=@folder.name %></h5>
		<%= render partial: 'folders/subFolder', collection: @subFolders %>
	<ul>
	<%end%>
	<%if @folder.parentId%>
		<h5 style="color:blue">
			<%= link_to "Parent of #{@folder.name}", folder_path(@folder.parentId) %>
		</h5>
	<%end%>
</div>
<div>

</div>
<div class="clear"></div>

<div>
	<%=form_tag new_folder_path, method: :GET,:id=>"creSub" do%>
		<%=hidden_field_tag 'Fparent', @folder.id%>
		<%=hidden_field_tag 'parentLevel', @folder.level%>
		<%= submit_tag "Create subfolder", :name => "crSub"  ,:id=>"btnCrSub",:class=>"btn"%>
	<%end%>
	<b ><%= link_to 'Edit Folder |', edit_folder_path(@folder.id)%></b>
	<b ><%= link_to 'Delete Folder',@folder, method: :delete, data:{confirm:"Are you user you want to delete this item?"}%></b>
	<b ><%=link_to " |Download Folder", down_folder_path(@folder.id) %></b >

</div>

<div id="div_search_file_form">
  <%= render 'search_file_form' %>
</div>

<div id="paginate_files">
  <%= render 'files' %>
</div>
