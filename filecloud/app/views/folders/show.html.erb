<h1 style="color:green"><%= @folder.name%></h1>

<p>Category:<%= link_to @folder.category.name ,{:action=>'show',:controller=>'categories',:id=>@folder.category.id} %></br>
</p>
<p>Created Date:<%=@folder.created_at%></br>
</p>
<p>Description:
	<%=@folder.description%>
</p>
<table class="tb-lst", border="1">
  <tr align="center">
   
    <th sytle="color:blue">File_Id</th>
    <th sytle="color:green">File Name</th>
    <th sytle="color:green">File Type</th>
    <th sytle="color:green">File Size(Bytes)</th>
    
    <th>Picture</th>
    <th>Download</th>
    <th></th>
  </tr>

<% @folder.upload_files.each do |f| %>
  <tr align="center">
    
    <td><%= f.id %></td>
    <td><%= f.attach_file_name %></td>
    <td><%= f.attach_content_type %></td>
    <td><%= f.attach_file_size %></td>
    
    <td><%= f.image %></td>
    <td><%= link_to 'Download',download_upload_file_path(f.id) %></td>
    <td><%= link_to 'Delete',f,method: :delete, data: { confirm: 'Are you sure?' }%></td>

    </tr>
  <%end%>
</table>


<p> 
<%=link_to 'Upload file',{:action=>'new',:controller=>'upload_files',:id=>@folder.id}%>
</p>
<p>
<%=link_to 'Back',{:action=>'index'}%>
</p>