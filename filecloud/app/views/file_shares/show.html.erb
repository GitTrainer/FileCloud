<% provide(:title, @file_share.file_up_load.attach_file_name)%>

<div id="container_file_show">
	<% if @file_share.file_up_load.attach_content_type.include? "image"%>
			<p>
				<span><%=@file_share.file_up_load.attach_file_name%>				</span>
				<span><%= link_to image_tag("btndownload.jpeg", alt: "Download"), download_file_shared_file_share_path(@file_share.id) %></span>
			</p>
			<div id="img_file">
				<%= image_tag @file_share.file_up_load.attach.url %>
			</div>
	<%else%>
		<div id="otherfile">
				
			<%= link_to download_file_shared_file_share_path(@file_share.id) do %>
				<p>
					<span>Download (<%=@file_share.file_up_load.attach_file_size%> byte)</span>
					<span>File name: <%=@file_share.file_up_load.attach_file_name%>	</span>
				</p>
			<%end%>
				
		</div>
	<%end%>
</div>

