								<td><%= link_to "Edit", edit_folder_path(folder)%></td>
								<td><%= link_to 'Delete', folder, method: :delete, data: { confirm: 'This action will delete all files and sub folders. Are you sure?' } %>
								</td>
						</tr>
				<% end %>
			<% end %>
		</table>
